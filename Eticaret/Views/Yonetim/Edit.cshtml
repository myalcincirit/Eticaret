@model Eticaret.Models.Urunler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm(Html.BeginForm("edit", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Urunler</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.UrunAdi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrunAdi)
            @Html.ValidationMessageFor(model => model.UrunAdi)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrunFiyati)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrunFiyati)
            @Html.ValidationMessageFor(model => model.UrunFiyati)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrunAciklamasi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrunAciklamasi)
            @Html.ValidationMessageFor(model => model.UrunAciklamasi)
        </div>

        <div class="editor-label">
           Urun  Resimi
        </div>
        <div class="editor-field">
            <input type="file" name="resim" value="@Model.UrunResimYol" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrunRengi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrunRengi)
            @Html.ValidationMessageFor(model => model.UrunRengi)
        </div>

       
     

        <div class="editor-label">
            @Html.LabelFor(model => model.Tarih)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tarih)
            @Html.ValidationMessageFor(model => model.Tarih)
        </div>
    





        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
