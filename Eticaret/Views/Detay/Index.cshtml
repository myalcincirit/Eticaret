@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Eticaret.Models.Urunler
<div class="container">
    <!-- Breadcrumb Start-->

    <!-- Breadcrumb End-->
    <div class="row">
        <!--Right Part Start -->
        <!--Right Part End -->
        <!--Middle Part Start-->
        <div id="content" class="col-sm-9">
            <div itemscope itemtype="http://schema.org/Product">
                <h1 class="title" itemprop="name">@Model.UrunAdi</h1>
                <div class="row product-info">
                    <div class="col-sm-6">
                        <div class="image"><img class="img-responsive" itemprop="image" id="zoom_01" src="/@Model.UrunResimYol" title="Laptop Silver black" alt="Laptop Silver black" data-zoom-image="/@Model.UrunResimYol" /> </div>
                        <div class="center-block text-center"><span class="zoom-gallery"><i class="fa fa-search"></i> Click image for Gallery</span></div>
                        <div class="image-additional" id="gallery_01"> <a class="thumbnail" href="#" data-zoom-image="/@Model.UrunResimYol" data-image="/@Model.UrunResimYol" title="Laptop Silver black"> <img src="/image/product/macbook_air_1-66x66.jpg" title="Laptop Silver black" alt="Laptop Silver black" /></a> <a class="thumbnail" href="#" data-zoom-image="/image/product/macbook_air_4-500x500.jpg" data-image="/image/product/macbook_air_4-350x350.jpg" title="Laptop Silver black"><img src="/image/product/macbook_air_4-66x66.jpg" title="Laptop Silver black" alt="Laptop Silver black" /></a> <a class="thumbnail" href="#" data-zoom-image="/image/product/macbook_air_2-500x500.jpg" data-image="/image/product/macbook_air_2-350x350.jpg" title="Laptop Silver black"><img src="/image/product/macbook_air_2-66x66.jpg" title="Laptop Silver black" alt="Laptop Silver black" /></a> <a class="thumbnail" href="#" data-zoom-image="/image/product/macbook_air_3-500x500.jpg" data-image="/image/product/macbook_air_3-350x350.jpg" title="Laptop Silver black"><img src="/image/product/macbook_air_3-66x66.jpg" title="Laptop Silver black" alt="Laptop Silver black" /></a> </div>
                    </div>
                    <div class="col-sm-6">
                        <ul class="list-unstyled description">
                            <li><b>Brand:</b> <a href="#"><span itemprop="brand">@Model.UrunAdi</span></a></li>
                            <li><b>Availability:</b> <span class="instock">Stokta var</span></li>
                        </ul>
                        <ul class="price-box">
                            <li class="price" itemprop="offers" itemscope itemtype="http://schema.org/Offer"><span class="price">@Model.UrunFiyati</span></li>
                            
                        </ul>
                        <div id="product">
                            <h3 class="subtitle">Hemen Satın Al </h3>
                            <div class="form-group required">
                                
                            </div>
                            <div class="cart">
                                <div>                                
                                    <button type="button" id="button-cart" class="btn btn-primary btn-lg">Satın Al </button>
                                </div>
                                
                            </div>
                        </div>
                      
                        <hr>
                        <!-- AddThis Button BEGIN -->
                        <div class="addthis_toolbox addthis_default_style"> <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a> <a class="addthis_button_tweet"></a> <a class="addthis_button_google_plusone" g:plusone:size="medium"></a> <a class="addthis_button_pinterest_pinit" pi:pinit:layout="horizontal" pi:pinit:url="http://www.addthis.com/features/pinterest" pi:pinit:media="http://www.addthis.com/cms-content/images/features/pinterest-lg.png"></a> <a class="addthis_counter addthis_pill_style"></a> </div>
                        <script type="text/javascript" src="/s7.addthis.com/js/300/addthis_widget.js#pubid=ra-514863386b357649"></script>
                        <!-- AddThis Button END -->
                    </div>
                </div>
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab-description" data-toggle="tab">Acıklama</a></li>
                    <li><a href="#tab-review" data-toggle="tab">Yorumlar</a></li>
                </ul>
                <div class="tab-content">
                    <div itemprop="description" id="tab-description" class="tab-pane active">
                        <div>
                           @Model.UrunAciklamasi
                        </div>
                    </div>
                    
                    <div id="tab-review" class="tab-pane">
                        <fo rm class="form-horizontal" action="/YorumYap/Index/@Model.id" method="post">
                            <div id="review">
                                @{
                                    try
                                    {
                                        Eticaret.Models.EticaretContext db = new Eticaret.Models.EticaretContext();
                                        var deger = db.Yorumlars.Where(x => x.UrunId == Model.id);
                                        foreach (var item in deger)
                                        {
                                            <div>
                                                <table class="table table-striped table-bordered">
                                                    <tbody>
                                                        <tr>
                                                            <td style="width: 50%;"><strong><span>İsim : @item.Ad</span></strong></td>
                                                            <td style="width: 50%;"><strong><span>Soyad :@item.SoyAd</span></strong></td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="2">
                                                                <p>@item.Yorum</p>
                                                                <div class="rating"> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        }

                                    }
                                    catch
                                    {

                                    }

                                }

                                <div class="text-right"></div>
                            </div>
                          
                                <h2>Bir Yorum Yaz</h2>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-name" class="control-label">İsminiz</label>
                                        <input type="text" class="form-control" id="input-name" value="" name="name">
                                    </div>
                                </div>
                                <input type="hidden" name="id" value="@Model.id" />
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-name" class="control-label">Soyadınız</label>
                                        <input type="text" class="form-control" id="input-name" value="" name="soyad">
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-name" class="control-label">Mail Adresiniz</label>
                                        <input type="text" class="form-control" id="input-name" value="" name="email">
                                    </div>
                                </div>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label for="input-review" class="control-label">Yorumunuz</label>
                                        <textarea class="form-control" id="input-review" rows="5" name="text"></textarea>
                                        <div class="help-block"><span class="text-danger">Not:</span> Üye Olmanız lazım Yorum Yazmak için</div>
                                    </div>
                                </div>
                                <div class="buttons">
                                    <div class="pull-right">
                                        <button class="btn btn-primary" id="button-review" type="submit">Yorum Yap</button>
                                    </div>
                                </div>
                            </form>                       
                    </div>
                </div>

            </div>
        </div>
        <!--Middle Part End -->

    </div>
</div>
