@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="col-sm-9">
    <h1 class="title">Account Login</h1>
    <div class="row">
        <div class="col-sm-6">
            <h2 class="subtitle">Yeni Müşteri</h2>
            <p><strong>Üye Kaydı</strong></p>
            <p>Yeni Üye Oluşturma</p>
            <a href="/UyeOl/" class="btn btn-primary">Continue</a>
        </div>
        <form action="/Giris/GirisYap/" method="post">
            <div class="col-sm-6">
                <h2 class="subtitle">Üyeyim Zaten</h2>
                <div class="form-group">
                    <label class="control-label" for="input-email">E-Mail Address</label>
                    <input type="text" name="email" value="" placeholder="E-Mail Address" id="input-email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label" for="input-password">Şifre</label>
                    <input type="password" name="password" value="" placeholder="Password" id="input-password" class="form-control" />
                    <br />
                </div>
                <input type="submit" value="Giriş" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>